<% @title = "Products" %>

<h2 class="display-4 text-center">All Products</h2>

<div>
  <%= form_with(url: filter_products_path, method: :get, local: true) do %>
    <div class="form-row align-items-center">
      <div class="col-auto">
        <label class="form-check-label">
          Filter Products
        </label>
      </div>
      <div class="col-auto">
        <%= select_tag 'filter_product', raw("<option>All Products</option><option>Sale Products</option><option>New Products</option>"), :onchange => "this.form.submit();" %>
      </div>
    </div>
  <% end %>
</div>

<div class="card-deck">
  <%= render @products %>
</div>

<%= paginate @products %>