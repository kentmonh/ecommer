<form>
  <%= form_with(url: filter_products_path, method: :get, local: true) do %>
  <div class="form-row align-items-center">
    <div class="col-auto">
      <label class="form-check-label">
        Filter Products
      </label>
    </div>
    <div class="col-auto">
      <%= select_tag 'select_generation', options_from_collection_for_select(Brand.all, :id, :name), prompt: "All Generation" %>
    </div>
    <div class="col-auto control">
      <%= submit_tag("Filter", class: "button is-primary") %>
    </div>
  </div>
  <% end %>
</form>
