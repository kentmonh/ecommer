<% @title = @product.name %>

<div class="row">
  <div class="col-5">
    <% if @product.image.present? %>
      <%= image_tag @product.image, class:"img-fluid" %>
    <% end %>
  </div>

  <div class="col-6 offset-1">
    <p class="lead">
      <%= @product.name %>
    </p>

    <p>
      <%= link_to "By #{@product.brand.name}", @product.brand %>
    </p>

    <p>
      Sku: <%= @product.sku %>
    </p>

    <% if @product.sale_price.present? && @product.sale_price < @product.price %>
      <p>
        Price On Sale: <s><%= @product.price %></s> <%= @product.sale_price %>
      </p>
    <% else %>
      <p>
        Price: <%= @product.price %>
      </p>
    <% end %>

    <p>
      Product Information: <%= simple_format(@product.description) %>
    </p>

  </div>
</div>
